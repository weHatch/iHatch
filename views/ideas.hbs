<div class="">
  {{#each ideass}}
          <a href="ideas/singleview/{{id}}"><h2 class ="titles">{{title}}</h2></a>
  {{/each}}
</div>



<div id="modalFrame">Add Idea</div>
<div id="myModal" hidden>
        <div class="modalHeader">
          <h2>{{currentUser.name}}</h2>
        </div>
        <div class="modalMain">
            <p>Add Idea</p>
            <form class="addIdea" action="/ideas" method="post">
              <label for="title">Idea Title</label>
              <input type="text" name="title" value="" placeholder="Enter your idea title">
              <label for="details"></label>
              <input type="text" name="details" value="" placeholder="enter idea details">
              <div class="">
                <label for="excitement ">Idea Excitement</label>
                <select class="excitement" name="excitement">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
                <label for="difficulty ">Idea Difficulty</label>
                <select class="difficulty" name="difficulty">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
              </div>
              <button id="modalSubmit" class="modalBtn">Submit</button>

            </form>
        </div>
        <div class="modalFooter">
          <a href="/ideas" id="modalCancel" class="modalBtn">Cancel</a>
        </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
$('#modalFrame').click(function() {
  $('#myModal').toggleClass('active')
})
</script>
