<style media="screen">
  body {
    width:100%;
    background-color: rgba(79, 192, 255, .9);
    background-size: cover;
    background-repeat: no-repeat;
  }
</style>

<form class="singleViewdiv" action="/ideas/{{id}}/{{title}}/update" method="post">


  <div class="titleDiv">
    <div class="setTitle">
      <div class="lilTitle">
        <p class="h1">{{title}}<input required class="titleChange" name="title" value="{{title}}" placeHolder="Change Project Title"></p>
      </div>
    </div>
  </div>

  <div class="contentDiv">
    <div class="set set1">
      <div class="lilTitle">
        <h5><mark>Project Description:</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="description" placeHolder="Edit Project Description">{{description}}</textarea>
      </div>
    </div>
      <div class="set set1">
        <div class="lilTitle">
          <h5><mark>Your Notes Here:</mark></h5>
        </div>
        <div class="theContent">
          <textarea name="notes" placeholder="Enter Idea Notes">{{notes}}</textarea>
        </div>
    </div>
  </div>

  <div class="contentDiv">
    <div class="set setMain">
      <div class="lilTitle">
        <h5><mark>Excitement Level:</mark></h5>
      </div>
      <div class="theContent">
        <select class="excitement" name="excitement" selected="{{excitement}}">
          <option value="Somewhat Excited">Somewhat Excited</option>
          <option value="Kind Of Excited">Kind Of Excited</option>
          <option value="Excited" selected>Excited</option>
          <option value="Very Excited">Very Excited</option>
          <option value="Extremely Excited">Extremely Excited</option>
        </select>
      </div>
    </div>
    <div class="set setMain">
      <div class="lilTitle">
        <h5><mark>Difficulty Level:</mark></h5>
      </div>
      <div class="theContent">
        <select class="difficulty" name="difficulty" selected="{{difficulty}}">
          <option value="Very Easy">Very Easy</option>
          <option value="Easy">Easy</option>
          <option value="Intermediate" selected>Intermediate</option>
          <option value="Difficult">Difficult</option>
          <option value="Very Difficult">Very Difficult</option>
        </select>
      </div>
    </div>
    <div class="set setMain">
      <div class="lilTitle">
        <h5><mark>Definite Features:</mark></h5>
      </div>
      <div class="theContent">
        <textarea type="text" name="defFeatures" placeholder="enter Definite Features Here">{{defFeatures}}</textarea>
      </div>
    </div>
    <div class="set setMain">
      <div class="lilTitle">
        <h5><mark>Possible Features:</mark></h5>
      </div>
      <div class="theContent">
        <textarea type="text" name="posFeatures" placeholder="Enter Potential Features Here">{{posFeatures}}</textarea>
      </div>
    </div>
  </div>

  <div class="contentDiv">
    <div class="set set2">
      <div class="lilTitle">
        <h5><mark>Who is Your Target Audience?</mark></h5>
      </div>
      <div class="theContent">
        <textarea type="text" name="market" placeholder="List {{title}}'s Market Opportunities">{{market}}</textarea>
      </div>
    </div>
  <div class="set set2">
      <div class="lilTitle">
        <h5><mark>What is Your Product's Value Add?</mark></h5>
      </div>
      <div class="theContent">
        <textarea type="text" name="valueAdd" placeholder="List how {{title}} adds value to everyday life">{{valueAdd}}</textarea>
      </div>
    </div>
  </div>

  <div class="contentDiv">
    <div class="set set3">
      <div class="lilTitle">
        <h5><mark>What is Your Current Compeition?</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="competition" placeholder="List the Current Competition {{title}} Faces">{{competition}}</textarea>
      </div>
    </div>
    <div class="set set3">
      <div class="lilTitle">
        <h5><mark>How Will You Improve on the Competition?</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="compImprove" placeholder="List How Your Product Will Improve on The Compeition">{{compImprove}}</textarea>
      </div>
    </div>
    <div class="set set3">
      <div class="lilTitle">
        <h5><mark>Which Technologies &amp; Processes Will You be Using?</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="techUsed" placeholder="List Which Technologies &amp; Processes That Will be Used to Create {{title}}">{{techUsed}}</textarea>
      </div>
    </div>
  </div>

  <div class="contentDiv">
    <div class="set set4">
      <div class="lilTitle">
        <h5><mark>What Challenges Might You Face?</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="challenges" placeholder="List Any Challenges You May Face While Hatching {{title}}">{{challenges}}</textarea>
      </div>
    </div>
    <div class="set set4">
      <div class="lilTitle">
        <h5><mark>List Any Helpful Resources Here:</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="resources" placeholder="List Any Helpful Resources You Find or Use   Here:">{{resources}}</textarea>
        <h3>{{resources}}</h3>
      </div>
    </div>
  </div>

  <div class="contentDiv">
    <div class="set set5">
      <div class="lilTitle">
          <h5><mark>What is Your Purpose for Creating <em>{{title}}</em>?</mark></h5>
        </div>
      <div class="theContent">
        <textarea name="purpose" placeholder="List the Reasons &amp; Inspirations You have for Creating {{title}}: ">{{purpose}}</textarea>
        <h3>{{purpose}}</h3>
      </div>
    </div>
    <div class="set set5">
      <div class="lilTitle">
        <h5><mark>How do You Plan to Research for <em>{{title}}</em>?</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="research" placeholder="List Your Strategy for Gathering Information About {{Title}}">{{research}}</textarea>
      </div>
    </div>
    <div class="set set5">
      <div class="lilTitle">
        <h5><mark>List Any Helpful Links Here:</mark></h5>
      </div>
      <div class="theContent">
        <textarea name="links" placeholder="List Any Links You Find Helpful Here">{{links}}</textarea>
      </div>
    </div>
  </div>

  <div class="contentDiv">
    <div class="set set6">
      <div class="lilTitle Bishes">
        <h5><mark>What Stage is <em>{{title}}</em> currently in?</mark></h5>
      </div>
      <div class="theContent">
        <h3>{{stage}}</h3>
        <select class="stage" name="stage" selected="{{stage}}">
          <option value="Conceive" selected>Conceive</option>
          <option value="Incubate">Incubate</option>
          <option value="Hatch">Hatch</option>
        </select>
      </div>
    </div>
    <div class="set set6">
      <div class="lilTitle">
        <h5><mark>Created On:</mark></h5>
      </div>
    <div class="theContent date">
      <h3>{{date}}</h3>
    </div>
  </div>
</div>

<div class="update
btn">
  <button class="bouton update" type="submit">Update</button>
</div>

</form>


